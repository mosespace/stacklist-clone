{
  "manifest_version": 3,
  "name": "Product Capture",
  "version": "1.0",
  "description": "Capture product details from e-commerce websites",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": ["https://your-api-endpoint.com/*"]
}
